# MongoDB connection string for your database.  Use the free tier on MongoDB Atlas.
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/discord_clone?retryWrites=true&w=majority

# Cloudinary credentials for media uploads.  Sign up for a free account and fill in your details.
CLOUD_NAME=your_cloud_name
CLOUD_API_KEY=your_api_key
CLOUD_API_SECRET=your_api_secret

# Secret key used to sign JWT tokens.  Change this to a long random value.
JWT_SECRET=your_jwt_secret

# Port the server listens on
PORT=3000